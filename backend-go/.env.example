# Backend Environment Variables
# Copy this content to GitHub Secret: ENV_FILE_BACKEND_DEV or ENV_FILE_BACKEND_PROD

# App Config
GIN_MODE=release
SERVICE_NAME=painaina-api
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# MongoDB
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net
MONGODB_DATABASE=painaina
MONGODB_MAX_POOL_SIZE=100
MONGODB_TIMEOUT=30s

# Redis
REDIS_URL=redis://default:xxx@redis-host:6379
REDIS_PREFIX=painaina:

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_xxx
CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_JWT_ISSUER_DOMAIN=https://xxx.clerk.accounts.dev

# Cloudflare R2 Storage
R2_ACCOUNT_ID=xxx
R2_ACCESS_KEY_ID=xxx
R2_SECRET_ACCESS_KEY=xxx
R2_BUCKET_NAME=painaina
R2_ENDPOINT=https://xxx.r2.cloudflarestorage.com
R2_DEV_SUBDOMAIN=https://xxx.r2.dev

# External APIs
GOOGLE_PLACES_API_KEY=xxx
UNSPLASH_ACCESS_KEY=xxx
UNSPLASH_SECRET_KEY=xxx
CONVEX_DEPLOYMENT_URL=https://xxx.convex.cloud

# OpenTelemetry (optional)
OTEL_ENABLED=false
OTEL_EXPORTER_TYPE=stdout
OTEL_SERVICE_NAME=painaina-api
OTEL_ZIPKIN_ENDPOINT=
OTEL_GCP_PROJECT_ID=
OTEL_OTLP_ENDPOINT=
OTEL_OTLP_HEADERS=

# CORS
CORS_ALLOWED_ORIGINS=https://painaina.com,https://dev.painaina.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type
